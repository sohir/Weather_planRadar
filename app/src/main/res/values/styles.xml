<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextBaseStyle">
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="TextHeaderStyle">
        <item name="android:textSize" tools:ignore="SpUsage">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="TextSubTitleStyle">
        <item name="android:textSize" tools:ignore="SpUsage">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="TextBaseBlueStyle">
        <item name="android:textSize" tools:ignore="SpUsage">20sp</item>
        <item name="android:textColor">@color/blue_800</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <!-- dialog width and screen ratio -->
        <item name="android:windowMinWidthMinor">90%</item>
        <!-- dialog background color, default is white -->
        <item name="android:colorBackground">@color/transparent</item>
    </style>
</resources>